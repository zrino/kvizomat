{% extends("base.html.twig") %}

{% form_theme form "bootstrap_3_layout.html.twig" %}

{% block body %}
    <div class="container">
{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

<button type="submit">Register!</button>
{{ form_end(form) }}
    </div>

{% endblock %}